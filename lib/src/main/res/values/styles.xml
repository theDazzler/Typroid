<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Typroid Base TextView -->
    <style name="TyproidBaseTextView" parent="android:style/Widget.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="typ_font">roboto-light</item>
    </style>

    <!-- Heading -->
    <style name="TyproidHeading" parent="TyproidBaseTextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="typ_font">roboto-medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Title -->
    <style name="TyproidTitle" parent="TyproidHeading">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- H1 -->
    <style name="TyproidH1" parent="TyproidHeading">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!-- H2 -->
    <style name="TyproidH2" parent="TyproidHeading">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <!-- H3 -->
    <style name="TyproidH3" parent="TyproidHeading">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- Subtitle -->
    <style name="TyproidSubtitle" parent="TyproidBaseTextView">
        <item name="android:textSize">@dimen/font_micro</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <!-- P -->
    <style name="TyproidP" parent="TyproidBaseTextView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:lineSpacingExtra">@dimen/p_line_height</item>
    </style>




</resources>
