<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="20dp" >

    <com.android.thedazzler.typroid.typography.Title
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Typroid"
        typroid:typ_font="roboto-thin"
        android:id="@+id/brand" />

    <com.android.thedazzler.typroid.typography.Subtitle
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:text="Easy typograhy for Android"
        android:layout_below="@id/brand"
        typroid:typ_font="roboto-thin-italic"
        android:id="@+id/tagline" />

</RelativeLayout>