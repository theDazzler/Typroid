<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:typroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.thedazzler.typroidtest.MainActivity$PlaceholderFragment">

    <com.android.thedazzler.typroid.typography.Title
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Title"
        typroid:typ_font="roboto-light"
        android:id="@+id/title" />




    <com.android.thedazzler.typroid.typography.H1
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="H1 Heading"
        typroid:typ_font="roboto-light"
        android:id="@+id/h1" />

    <com.android.thedazzler.typroid.typography.H2
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="H2 Heading"
        typroid:typ_font="roboto-light"
        android:id="@+id/h2" />

    <com.android.thedazzler.typroid.typography.H3
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="H3 Heading"
        typroid:typ_font="roboto-light"
        android:id="@+id/h3" />

    <com.android.thedazzler.typroid.typography.Subtitle
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Subtitle This is a subtitle"
        typroid:typ_font="roboto-light"
        android:id="@+id/subtitle" />

    <com.android.thedazzler.typroid.typography.P
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        typroid:typ_font="roboto-light"
        android:text="P This is a paragraph using Typroid. I am just typing random stuff right now."
        android:id="@+id/p"
        android:layout_marginBottom="20dp"/>



</LinearLayout>
